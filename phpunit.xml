<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        colors="true"
        bootstrap="./vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Entity">
            <directory>./test/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
            <exclude>
                <directory suffix=".php">vendor</directory>
                <file>test.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>